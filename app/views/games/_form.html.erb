<style>
.field_with_errors {
  color: red;
}
</style>

<script>
window.onload = function() {
    add_button = document.getElementById("add-button");
    add_button.onclick = function() {
        fourth_player = document.getElementById("fourth-player");
        if (fourth_player.type == "hidden") {
            fourth_player.type = "textbox";
            fourth_player.name = "game[players][]";
        } else {
            fourth_player.type = "hidden";
            fourth_player.name = "";
        }
    }
}
</script>

<%= form_for @game do |f| %>

  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@game.errors.count, "error") %> prohibited
        this game from being saved:
      </h2>
      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :players %><br>
    <% if @game.players? %>
      <% @game.players.each do |p| %>
          <input type="textbox" name="game[players][]" value=<%= p %>>
      <% end %>
    <% else %>
      <% 3.times do %>
        <input type="textbox" name="game[players][]">
      <% end %>
      <input id="fourth-player" type="hidden">
      <button id="add-button" type="button">Toggle player</button>
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
