<style>
.field_with_errors {
  color: red;
}
input:disabled {
  background: #eeeeee;
}
</style>

<h1>Updating Game</h1>

<%= form_for @game do |f| %>

  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@game.errors.count, "error") %> prohibited
        this game from being saved:
      </h2>
      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :players %><br>
    <% @game.players.each do |p| %>
      <input type="textbox" name="game[players][]" value=<%= p %> >
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back to all games', games_path %>
